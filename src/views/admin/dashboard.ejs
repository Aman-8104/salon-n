<%- include('../partials/head', { title }) %>
  <h1>Admin â€” Manage Barbers</h1>
  <section class="card">
    <h3>Add Barber</h3>
    <form method="post" action="/admin/barbers" class="grid-2">
      <label>Name<input name="name" required /></label>
      <label>Email<input name="email" type="email" required /></label>
      <label>Password<input name="password" type="password" placeholder="password123" /></label>
      <div><button class="cta" type="submit">Create</button></div>
    </form>
  </section>

  <section>
    <h3>Barber Accounts</h3>
    <% if (!barbers.length) { %><p>No barbers yet.</p><% } %>
    <ul class="list">
      <% barbers.forEach(b => { %>
        <li class="card">
          <form method="post" action="/admin/barbers/<%= b.id %>" class="grid-2">
            <label>Name<input name="name" value="<%= b.name %>" required /></label>
            <label>Email<input name="email" type="email" value="<%= b.email %>" required /></label>
            <div><button type="submit">Save</button></div>
          </form>
          <form method="post" action="/admin/barbers/<%= b.id %>/reset-password" class="grid-2">
            <label>New Password<input name="password" type="password" placeholder="New password" /></label>
            <div><button type="submit">Reset Password</button></div>
          </form>
        </li>
      <% }) %>
    </ul>
  </section>
<%- include('../partials/footer') %>
