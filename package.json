{
  "name": "mens-salon-website",
  "version": "0.1.0",
  "private": true,
  "description": "Men's Salon website with booking, customer and barber dashboards",
  "main": "src/server.js",
 "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "start:deploy": "npx prisma migrate deploy && node prisma/seed.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev --name init",
    "seed": "node prisma/seed.js",
    "fetch:gallery": "node scripts/fetch-gallery.js"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.5",
    "date-fns": "^4.1.0",
    "ejs": "^3.1.10",
    "express": "^4.19.2",
    "express-session": "^1.17.3",
    "method-override": "^3.0.0",
    "nodemailer": "^6.9.14",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "prisma": "^5.19.1"
  }
}
